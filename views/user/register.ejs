<div class="content">
<h3 style="text-decoration: underline; text-underline-offset: 6px;">Register</h3>

    <form action="/register" method="post" class="index-form" id="indexForm">
        <div class="form-control">
            <label for="username"><b>Username:</b></label>
            <input type="text" placeholder="Enter Username" name="username" id="username">
            <small>Error message</small>
        </div>

        <div class="form-control">
            <label for="email"><b>Email:</b></label>
            <input type="text" placeholder="Enter Email" id="email"> 
            <small>Error message</small>
        </div>
        

        <div class="form-control">
            <label for="password"><b>Password:</b></label>
            <input type="password" placeholder="Enter Password" id="password">
            <small>Error message</small>
        </div>

        <div class="form-control">
            <label for="password2"><b>Password:</b></label>
            <input type="password" placeholder="Repeat Password" name="password2" id="password2">
            <small>Error message</small>
        </div>

        <div class="form-control">
            <label for="birthdate">Date Of Birth</label>
            <input type="date" placeholder="Date" id="birthdate">
            <small>Error message</small>
        </div>

        <button type="submit">Register</button>
    </form>
    
    <script src="/js/register-validation.js"></script>
</div>